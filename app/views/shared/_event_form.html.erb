<h1>New Event</h1>

<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: @event %>
  <div class="field">
  	<%= f.label :date %>
  	<%= f.date_select :date %>

  	<%= f.label :location %>
  	<%= f.text_area :location %>
  	
  	<%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>