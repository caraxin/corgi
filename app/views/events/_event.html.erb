<li id="event-<%= event.id %>">
  <%= link_to gravatar_for(event.user), event.user %>
  <span class="user"><%= event.title %></span>
  <p> created by: </p>
  <span class="user"><%= link_to event.user.name, event.user %></span>
  <p> at: </p>
  <span class="content"><%= event.date %></span>
  <div class="content" id="link"><%= event.location %></div>
  
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    See in Google maps
  </button>
  

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <span><%= event.latitude %>, <%= event.longitude %></span>
        <div class="modal-body">
          <!-- <div id="mapCanvas" style="width: 640px; height: 400px"></div>  -->
          <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{event.latitude},#{event.longitude}&zoom=16&size=550x400&markers=color:blue%7clabel:S%7c#{event.latitude},#{event.longitude}&path=weight:3%7Ccolor:blue%7Cenc:{coaHnetiVjM??_SkM??~R&key=AIzaSyCp2SxzPnilWMAFfvo3QTr-EBCobz_dh6Y" %>
        </div>
      </div>
    </div>
  </div>

  <span class="content"><%= event.description %></span>
   <span class="content"><%= event.tag_list %></span>
  <span class="timestamp">
    Created <%= time_ago_in_words(event.created_at) %> ago.
  </span>
  <span class="content"><%= event.guests.count %> Attending</span>
  
  
  <!--comments-->
  <div class="events-wrapper row">
      <div class="events-head">
        <div class="user-name">
          <%= event.user.user_name %>
        </div>
      </div>
      <div class="event-bottom">
        <% if event.comments %>
          <% event.comments.each do |comment| %>
            <div class="comment">
              <div class="user-name">
                <%= comment.user.user_name %>
                <b> says: </b>
                <br>
              </div>
              <div class="comment-content">
                <%= comment.content %>
              </div>
              <% if current_user?(comment.user) %>
                <%= link_to "delete", event_comment_path(event, comment), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
        <% end %>
        <% end %>
        <div class="comment-form">
        	<%= form_for [event, event.comments.new] do |f| %>
            <%= f.text_field :content, placeholder: 'Add a comment...' %>
            <% end %>
        </div>
     </div>
  </div>




  <% if current_user?(event.user) %>
    <%= link_to "edit", edit_event_path(event) %>
    <%= link_to "delete", event, method: :delete,
                                     confirm: "You sure?" %>
  <% else %>
    <% if current_user.guest?(event) %>
      <%= form_for(current_user.invite_relationships.find_by(event_id: event.id),
               html: { method: :delete }) do |f| %>
          <%= f.submit "Leave", class: "btn" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.invite_relationships.build) do |f| %>
        <div><%= hidden_field_tag :event_id, event.id %></div>
        <%= f.submit "Join", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
</li>