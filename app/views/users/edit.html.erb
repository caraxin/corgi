<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>


      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Re-Type Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :background, "Biography" %>
      <%= f.text_area :background, class: 'form-control' %>

      <div class="form-group text-center">
        <h4>Change your profile image:</h4>
          <div class="img-circle" style="display: inline-block;vertical-align: middle;float: none;">
            <%= profile_avatar_select(@user) %>
          </div>
            <%= f.file_field :avatar, onChange: 'loadFile(event)' %>
      </div>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
