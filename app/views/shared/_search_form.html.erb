<%= form_tag search_path, :method => 'post' do %>
  <p>
  	<div class="col-md-12">
	  	<div class="col-md-8">
	    	<%= text_field_tag :search, params[:search] %>
		</div>
		<div class="col-md-2">
	    	<%= submit_tag "Search", :name => nil %>
	    </div>
	    <div class="col-md-1">
	    	<%= link_to "Cancel", root_path, class: "btn btn-large btn-lg btn-primary" %>
	    </div>
	</div>
  </p>
<% end %>