<h1>New Event</h1>


<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: @event %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>

  	<%= f.label :date %>
  	<%= f.date_select :date %>

  	<%= f.label :location %>
  	<%= f.text_area :location %>
  	
  	<%= f.label :description %>
    <%= f.text_area :description %>

  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
