<% provide(:title, "Edit user") %>
<h1>Update your account</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
      <%= render 'shared/error_messages', object: @user %>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group text-center">
               <h4>Username:</h4>
               <%= f.text_field :user_name, label: false, rows: 4 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group text-center">
               <h4>Name:</h4>
               <%= f.text_field :name, label: false, rows: 4 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group text-center">
               <h4>Email:</h4>
               <%= f.text_field :email, label: false, rows: 4 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group text-center">
               <h4>Password:</h4>
               <%= f.password_field :password, label: false, rows: 4 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group text-center">
               <h4>Re-Type Password:</h4>
               <%= f.password_field :password_confirmation, label: false, rows: 4 %>
            </div>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Update User Settings", class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>
