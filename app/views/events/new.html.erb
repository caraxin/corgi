<div class="form-wrapper">
  <h1>New Event</h1>
  <%= simple_form_for @event, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :title %>
    </div>
    <div class="form-group">
      <%= f.input :date, as: :datetime, start_year: Date.today.year, order: [:month, :day, :year] %>
    </div>
    <div class="form-group text-center">
      <%= f.input :location %>
    </div>
    <div class="form-group text-center">
      <%= f.input :description %>
    </div>
    <div class="form-group checkbox">
      <%= f.input :isprivate, :as => :boolean, input_html: {checked: false} %>
    </div>

    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>