<% provide(:title, 'Friend Circle') %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1><%= @user.user_name %></h1>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-9">
    <% if @friend_events %>
      <% if @friend_events.any? %>
        <ol class="events">
          <%= render @friend_events %>
        </ol>
        <%= will_paginate @friend_events %>
      <% end %>
    <% end %>
  </div>
</div>